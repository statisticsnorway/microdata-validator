{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "dateType": {
      "$comment": "Type for the date format YYYY-MM-DD. (Python package jsonschema missing support for JSON Schema date format.)",
      "type": "string",
      "pattern": "^\\d{4}\\-(0?[1-9]|1[012])\\-(0?[1-9]|[12][0-9]|3[01])$"
    },
    "multilingualStringType": {
      "$comment": "Type for language support.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "languageCode": {
            "type": "string",
            "enum": [
              "no",
              "nb",
              "nn",
              "en"
            ]
          },
          "value": {
            "type": "string"
          }
        },
        "required": [
          "languageCode",
          "value"
        ]
      }
    },
    "codeListType": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "categoryTitle": {
            "$ref": "#/definitions/multilingualStringType"
          },
          "validFrom": {
            "$ref": "#/definitions/dateType"
          },
          "validUntil": {
            "oneOf": [
              {"type": "null"},
              {"$ref": "#/definitions/dateType"}
            ]
          }
        },
        "required": [
          "code",
          "categoryTitle",
          "validFrom"
        ]
      }
    },
    "sentinelAndMissingValuesType": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "categoryTitle": {
            "$ref": "#/definitions/multilingualStringType"
          },
          "codeType": {
            "type": "string",
            "enum": [
              "MISSING",
              "SENTINEL"
            ]
          }
        },
        "required": [
          "code",
          "categoryTitle"
        ]
      }
    },
    "valueDomainType": {
      "type": "object",
      "properties": {
        "description": {
          "$ref": "#/definitions/multilingualStringType"
        },
        "measurementType": {
          "type": "string",
          "enum": [
            "CURRENCY",
            "WEIGHT",
            "LENGTH",
            "HEIGHT",
            "GEOGRAPHICAL"
          ]
        },
        "measurementUnitDescription": {
          "$ref": "#/definitions/multilingualStringType"
        },
        "uriDefinition": {
          "type": "array",
          "items": [
            {
              "type": [
                "string",
                "null"
              ]
            }
          ]
        },
        "codeList": {
          "$ref": "#/definitions/codeListType"
        },
        "sentinelAndMissingValues": {
          "$ref": "#/definitions/sentinelAndMissingValuesType"
        }
      },
      "anyOf": [
        {
          "required": [
            "codeList"
          ]
        },
        {
          "required": [
            "description"
          ]
        }
      ]
    },
    "unitTypeType": {
          "type": "string",
          "enum": [
            "JOBB",
            "KJORETOY",
            "FAMILIE",
            "FORETAK",
            "HUSHOLDNING",
            "KOMMUNE",
            "KURS",
            "PERSON",
            "VIRKSOMHET"
          ]
    },
    "subjectFieldsType": {
      "type": "array",
      "minItems": 1,
      "items": [
        { "$ref": "#/definitions/multilingualStringType" }
      ]
    }
  },

  "type": "object",
  "properties": {
    "temporalityType": {
      "type": "string",
      "enum": [
        "FIXED",
        "STATUS",
        "ACCUMULATED",
        "EVENT"
      ]
    },
    "sensitivityLevel": {
      "type": "string",
      "enum": [
        "PERSON_GENERAL",
        "PERSON_SPECIAL",
        "PUBLIC",
        "NONPUBLIC"
      ]
    },
    "populationDescription": {
      "$ref": "#/definitions/multilingualStringType"
    },
    "spatialCoverageDescription": {
      "$ref": "#/definitions/multilingualStringType"
    },
    "subjectFields": {
      "$ref": "#/definitions/subjectFieldsType"
    },
    "dataRevision": {
      "type": "object",
      "properties": {
        "description": {
          "$ref": "#/definitions/multilingualStringType"
        },
        "temporalEndOfSeries": {
          "type": "boolean"
        }
      },
      "required": [
        "description",
        "temporalEndOfSeries"
      ]
    },
    "identifierVariables": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "unitType": {
            "$ref": "#/definitions/unitTypeType"
          }
        },
        "required": [
          "unitType"
        ]
      }
    },
    "measureVariables": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "#/definitions/multilingualStringType"
          },
          "description": {
            "$ref": "#/definitions/multilingualStringType"
          },
          "dataType": {
            "type": "string",
            "enum": [
              "STRING",
              "LONG",
              "DATE",
              "DOUBLE"
            ]
          },
          "unitType": {
            "$ref": "#/definitions/unitTypeType"
          },
          "valueDomain": {
            "$ref": "#/definitions/valueDomainType"
          },
          "uriDefinition": {
            "type": "array",
            "items": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          "format": {
            "type": "string",
            "$comment": "E.g. a regular expression or a specific type like RandomUInt48."
          }
        },
        "anyOf": [
          {
            "required": [
              "name",
              "description",
              "dataType",
              "valueDomain"
            ]
          },
          {
            "required": [
              "unitType",
              "name",
              "description"
            ]
          }
        ]
      }
    },
    "attributeVariables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "shortName": {
            "type": "string"
          },
          "name": {
            "$ref": "#/definitions/multilingualStringType"
          },
          "description": {
            "$ref": "#/definitions/multilingualStringType"
          },
          "dataType": {
            "type": "string",
            "enum": [
              "STRING",
              "LONG",
              "DOUBLE",
              "DATE"
            ]
          },
          "valueDomain": {
            "$ref": "#/definitions/valueDomainType"
          },
          "uriDefinition": {
            "type": "array",
            "items": {
              "type": [
                "string",
                "null"
              ]
            }
          },
          "format": {
            "type": "string",
            "$comment": "E.g. a regular expression or a specific type like RandomUInt48."
          }
        },
        "required": [
          "variableRole",
          "shortName",
          "name",
          "description",
          "dataType",
          "valueDomain"
        ]
      }
    }
  },
  "required": [
    "temporalityType",
    "sensitivityLevel",
    "subjectFields",
    "populationDescription",
    "identifierVariables",
    "measureVariables",
    "spatialCoverageDescription",
    "dataRevision"
  ]
}