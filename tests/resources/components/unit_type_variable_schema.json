{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
      "dateType": {
        "$comment": "Type for the date format YYYY-MM-DD. (Python package jsonschema missing support for JSON Schema date format.)",
        "type": "string",
        "pattern": "^\\d{4}\\-(0?[1-9]|1[012])\\-(0?[1-9]|[12][0-9]|3[01])$"
      },
      "multilingualStringType": {
        "$comment": "Type for language support.",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "languageCode": {
              "type": "string",
              "enum": [
                "no",
                "nb",
                "nn",
                "en"
              ]
            },
            "value": {
              "type": "string"
            }
          },
          "required": [
            "languageCode",
            "value"
          ]
        }
      },
      "codeListType": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            },
            "categoryTitle": {
              "$ref": "#/definitions/multilingualStringType"
            },
            "validFrom": {
              "$ref": "#/definitions/dateType"
            },
            "validUntil": {
                "oneOf": [
                    {"type": "null"},
                    {"$ref": "#/definitions/dateType"}
                ]
            }
          },
          "required": [
            "code",
            "categoryTitle",
            "validFrom"
          ]
        }
      },
      "sentinelAndMissingValuesType": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            },
            "categoryTitle": {
              "$ref": "#/definitions/multilingualStringType"
            },
            "codeType": {
              "type": "string",
              "enum": [
                "MISSING",
                "SENTINEL"
              ]
            }
          },
          "required": [
            "code",
            "categoryTitle"
          ]
        }
      },
      "valueDomainType": {
        "type": "object",
        "properties": {
          "description": {
            "$ref": "#/definitions/multilingualStringType"
          },
          "measurementType": {
            "type": "string",
            "enum": [
              "CURRENCY",
              "WEIGHT",
              "LENGTH",
              "HEIGHT",
              "GEOGRAPHICAL"
            ]
          },
          "measurementUnitDescription": {
            "$ref": "#/definitions/multilingualStringType"
          },
          "uriDefinition": {
            "type": "array",
            "items": [
              {
                "type": [
                  "string",
                  "null"
                ]
              }
            ]
          },
          "codeList": {
            "$ref": "#/definitions/codeListType"
          },
          "sentinelAndMissingValues": {
            "$ref": "#/definitions/sentinelAndMissingValuesType"
          }
        },
        "anyOf": [
          {
            "required": [
              "codeList"
            ]
          },
          {
            "required": [
              "description"
            ]
          }
        ]
      }
    },
  
    "type": "object",
    "properties": {
        "shortName": {"type": "string"},
        "name": {"$ref": "#/definitions/multilingualStringType"},
        "description": {"$ref": "#/definitions/multilingualStringType"},
        "dataType": {
            "type": "string",
            "enum": ["STRING", "LONG", "DATE", "DOUBLE"]
        },
        "format": {"type": "string"},
        "unitType": {
            "type": "object",
            "properties": {
                "shortName": {"type": "string"},
                "name": {"$ref": "#/definitions/multilingualStringType"},
                "pseudonymized": {"type": "boolean"},
                "description": {"$ref": "#/definitions/multilingualStringType"}
            },
            "required": ["shortName", "name", "pseudonymized", "description"]
        },
        "valueDomain": {"$ref": "#/definitions/valueDomainType"}
    },
    "required": [
        "shortName",
        "name",
        "description",
        "dataType",
        "unitType",
        "valueDomain"
    ]
}
      